{
  "name": "turborepo-starter",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint -- --fix",
    "fix": "turbo run fix",
    "staged": "lint-staged"
  },
  "engines": {
    "node": "22",
    "pnpm": "10"
  },
  "devDependencies": {
    "turbo": "latest"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "turbo run lint -- --fix"
    ]
  },
  "packageManager": "pnpm@10.15.0"
}